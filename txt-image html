    <script>
        // Mobile menu toggle
        document.querySelector('.mobile-menu-btn').addEventListener('click', function() {
            document.getElementById('main-nav').classList.toggle('active');
        });
        
        // Quality selection
        const qualityOptions = document.querySelectorAll('.quality-option');
        qualityOptions.forEach(option => {
            option.addEventListener('click', function() {
                qualityOptions.forEach(opt => opt.classList.remove('active'));
                this.classList.add('active');
            });
        });
        
        // Generate image function
        document.getElementById('generate-btn').addEventListener('click', function() {
            const text = document.getElementById('input-text').value.trim();
            const quality = document.querySelector('.quality-option.active').getAttribute('data-quality');
            
            if (!text) {
                alert('Please enter some text to generate an image');
                return;
            }
            
            // Show loading spinner
            const spinner = document.getElementById('spinner');
            const generateBtn = document.getElementById('generate-btn');
            generateBtn.disabled = true;
            spinner.style.display = 'block';
            
            // Simulate image generation (in a real app, this would call your backend API)
            setTimeout(() => {
                // Hide spinner
                spinner.style.display = 'none';
                generateBtn.disabled = false;
                
                // For demo purposes, we'll create a canvas with the text
                createTextImage(text, quality);
            }, 1500);
        });
        
        // Function to create a text image (demo implementation)
        function createTextImage(text, quality) {
            const canvas = document.createElement('canvas');
            const ctx = canvas.getContext('2d');
            
            // Set canvas size based on quality
            let width, height, fontSize, padding;
            
            switch(quality) {
                case 'low':
                    width = 400;
                    height = 200;
                    fontSize = 16;
                    padding = 20;
                    break;
                case 'medium':
                    width = 600;
                    height = 300;
                    fontSize = 24;
                    padding = 30;
                    break;
                case 'high':
                    width = 800;
                    height = 400;
                    fontSize = 32;
                    padding = 40;
                    break;
                case 'ultra':
                    width = 1200;
                    height = 600;
                    fontSize = 48;
                    padding = 60;
                    break;
                default:
                    width = 600;
                    height = 300;
                    fontSize = 24;
                    padding = 30;
            }
            
            canvas.width = width;
            canvas.height = height;
            
            // Draw background
            ctx.fillStyle = '#ffffff';
            ctx.fillRect(0, 0, width, height);
            
            // Draw border
            ctx.strokeStyle = '#4285f4';
            ctx.lineWidth = 2;
            ctx.strokeRect(5, 5, width - 10, height - 10);
            
            // Draw text
            ctx.fillStyle = '#333333';
            ctx.font = `bold ${fontSize}px Arial`;
            ctx.textAlign = 'center';
            
            // Wrap text
            const maxWidth = width - (padding * 2);
            const lineHeight = fontSize * 1.2;
            const lines = [];
            let currentLine = '';
            
            const words = text.split(' ');
            for (let i = 0; i < words.length; i++) {
                const testLine = currentLine + words[i] + ' ';
                const metrics = ctx.measureText(testLine);
                const testWidth = metrics.width;
                
                if (testWidth > maxWidth && i > 0) {
                    lines.push(currentLine);
                    currentLine = words[i] + ' ';
                } else {
                    currentLine = testLine;
                }
            }
            lines.push(currentLine);
            
            // Draw each line
            const startY = (height - (lines.length * lineHeight)) / 2 + fontSize;
            for (let i = 0; i < lines.length; i++) {
                ctx.fillText(lines[i], width / 2, startY + (i * lineHeight));
            }
            
            // Convert canvas to image and display
            const dataURL = canvas.toDataURL('image/png');
            const outputImage = document.getElementById('output-image');
            const placeholder = document.getElementById('placeholder');
            const downloadBtn = document.getElementById('download-btn');
            
            outputImage.src = dataURL;
            outputImage.style.display = 'block';
            placeholder.style.display = 'none';
            downloadBtn.style.display = 'inline-block';
            
            // Set up download button
            downloadBtn.onclick = function() {
                const link = document.createElement('a');
                link.download = 'text-image.png';
                link.href = dataURL;
                link.click();
            };
        }
        
        // Initialize AdSense ads
        // This would be handled automatically by the AdSense script
        // but we can ensure all ad slots are processed
        window.addEventListener('load', function() {
            if (typeof adsbygoogle !== 'undefined') {
                adsbygoogle = window.adsbygoogle || [];
                adsbygoogle.push({});
            }
        });
    </script>
    
